<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fra_555666"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fralay_youjitupian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/youjixiangpian_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
          />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="bottom|center">

            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:alpha="0.3"
                android:background="#555" />

            <TextView
                android:id="@+id/youjixiangpian_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical|center"
                android:maxLines="1"
                android:textColor="#fff"
                android:textSize="14sp" />
        </FrameLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relay_notupian"
        android:layout_width="258dp"
        android:layout_height="188dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@mipmap/yinhaokuang"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/youjinopic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxLines="6"
            android:textSize="16sp" />

    </RelativeLayout>


</FrameLayout>