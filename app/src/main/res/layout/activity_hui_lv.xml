<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".myActivity.HuiLvActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1296DB"
        android:paddingTop="16dp">

        <include layout="@layout/title_lay" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="\u3000\u3000汇率是指两种不同货币之间的兑换价，一种货币兑换另一种货币的比率，是以一种货币表示的另一种货币的价格。" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="\u3000\u3000截至汇率更新时间为止:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人民币兑澳门币(1RMB:1MOP)汇率为：" />

            <TextView
                android:id="@+id/tv_aomenbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textColor="#C91F22"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人民币兑港币(1RMB:1HKD)汇率为：\u3000" />

            <TextView
                android:id="@+id/tv_gangbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textColor="#C91F22"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:textColor="#3593F0"
            android:gravity="center"
            android:layout_marginTop="28dp"
                               android:text="换算结果"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/quqi_china"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:text="CNY"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="14sp"
                    android:text="人民币"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_rmb"
                android:inputType="number"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:background="@drawable/edt_back"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:hint="请输入您要兑换的人民币数额(整元)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/quqi_aomen"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:text="MOP"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="14sp"
                    android:text="澳门币"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

  <TextView
      android:id="@+id/huansuan_aomenbi"
      android:textSize="18sp"
      android:layout_marginLeft="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/quqi_xianggang"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:text="HKD"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="14sp"
                    android:text="港\u3000币"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/huansuan_gangbi"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_huansuan"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:paddingLeft="58dp"
            android:paddingRight="58dp"
            android:text="换算"
            android:textColor="#fff"
            android:background="@drawable/btn_shenlan"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="32sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="28dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#3593F0"
                    android:textSize="14sp"
                    android:text="更新时间："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_gengxintime"
                    android:layout_marginLeft="6dp"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>