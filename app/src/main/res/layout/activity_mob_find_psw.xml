<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myActivity.MobFindPswActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_marginTop="66dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/im_66666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/travel_baloon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1296DB"
            android:paddingTop="18dp">

            <include layout="@layout/title_lay" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@mipmap/pic_peole"
                android:visibility="invisible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="修改密码"
                android:textColor="#6AACFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/login_name" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/editext_back"
                    android:hint="请输入要更改密码的用户名"
                    android:paddingBottom="6dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:textColorHint="#BCBCBC"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/login_psw" />

                <EditText
                    android:id="@+id/et_oldPsw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/editext_back"
                    android:hint="请输入旧密码"
                    android:paddingBottom="6dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:textColorHint="#BCBCBC"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/login_newpsw" />

                <EditText
                    android:id="@+id/et_newPsw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/editext_back"
                    android:hint="请输入新密码"
                    android:inputType="textPassword"
                    android:paddingBottom="6dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:textColorHint="#BCBCBC"
                    android:textSize="16sp" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_update_psw"
                android:layout_width="wrap_content"
                android:layout_height="36sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="58dp"
                android:alpha="0.9"
                android:background="@drawable/btn_danlan"
                android:paddingLeft="58dp"
                android:paddingRight="58dp"
                android:text="修改密码"
                android:textColor="#fff"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>