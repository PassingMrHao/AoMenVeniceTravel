<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context=".myFragment.FindTravel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#1296DB">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:text="新大陆"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_message"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="8dp"
            android:background="@mipmap/mes"
            android:visibility="invisible" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.78"
                    android:background="@mipmap/shuijing_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/im_tuichu_login"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="8dp"
                            android:background="@mipmap/tuichu_login" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/im_user"
                            android:layout_width="98dp"
                            android:layout_height="98dp"
                            android:layout_marginLeft="28dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未登录"
                                android:textColor="#fff"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tv_denglu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/btn_danred"
                                android:paddingBottom="2dp"
                                android:paddingLeft="18dp"
                                android:paddingRight="18dp"
                                android:paddingTop="2dp"
                                android:text="登录/注册"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/find_aomen"
                    android:layout_width="0dp"
                    android:layout_height="98dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@mipmap/qianback_red">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="初识澳门"
                            android:textColor="#fff"
                            android:textSize="23sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/find_chengshi" />
                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/find_collect"
                    android:layout_width="0dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@mipmap/qianback_zise">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="我的收藏"
                            android:textColor="#fff"
                            android:textSize="23sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/find_shoucang" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/find_zhekou"
                    android:layout_width="0dp"
                    android:layout_height="98dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@mipmap/qianback_green">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="特价折扣"
                            android:textColor="#fff"
                            android:textSize="23sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/find_zhekou" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/find_shangchang"
                    android:layout_width="0dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@mipmap/qianback_yellow">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="购物商场"
                            android:textColor="#fff"
                            android:textSize="23sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/find_gouwu" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/find_yule"
                    android:layout_width="0dp"
                    android:layout_height="98dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@mipmap/qianback_shenlan">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="娱乐场所"
                            android:textColor="#fff"
                            android:textSize="23sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/find_yule" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/find_food"
                    android:layout_width="0dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@mipmap/qianback_pink">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="美食餐饮"
                            android:textColor="#fff"
                            android:textSize="23sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/find_food" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/find_clean"
                    android:layout_width="0dp"
                    android:layout_height="98dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@mipmap/qianback_juhong">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="清理缓存"
                            android:textColor="#fff"
                            android:textSize="23sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/qingli" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/find_update"
                    android:layout_width="0dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@mipmap/qianback_blue">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="检查更新"
                            android:textColor="#fff"
                            android:textSize="23sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/gengxin" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/find_tuisong"
                    android:layout_width="0dp"
                    android:layout_height="98dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@mipmap/qianback_zise">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="推送设置"
                            android:textColor="#fff"
                            android:textSize="23sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/tuisong" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/find_yijian"
                    android:layout_width="0dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@mipmap/qianback_green">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="意见反馈"
                            android:textColor="#fff"
                            android:textSize="23sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/yijian" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:text="澳门威尼斯人旅游攻略"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="2px"
                    android:background="#BCBCBC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="更多服务 敬请期待"
                    android:textColor="#BCBCBC"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="2px"
                    android:background="#BCBCBC" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>