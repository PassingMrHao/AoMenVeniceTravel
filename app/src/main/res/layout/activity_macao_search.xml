<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EaEaEa"
    tools:context=".myActivity.MacaoSearchActivity">

    <LinearLayout
        android:background="#1296db"
        android:paddingTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/title_lay"/>
    </LinearLayout>
    <mrhao.com.aomentravel.utils.MySearchViewUtils.MySearchView

        android:id="@+id/mysearch_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textSizeSearch="6dp"
        app:textColorSearch="#707070"
        app:textHintSearch="请输入要搜索的内容"
        app:searchBlockHeight="150"
        app:searchBlockColor="#ffffff">

    </mrhao.com.aomentravel.utils.MySearchViewUtils.MySearchView>
</LinearLayout
   >